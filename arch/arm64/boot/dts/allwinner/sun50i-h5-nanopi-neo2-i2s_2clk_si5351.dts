/dts-v1/;
#include "sun50i-h5-nanopi-neo2.dts"

/ {
	pcm5102a: pcm5102a-codec {
		status = "okay";
	};

	sound {
		compatible = "i2smfdl,multi-function-dai-link";
		i2s-controller = <&i2s0>;
		i2s-codec = <&pcm5102a>;
		status = "okay";

		clk_mode = "EXT_3CLK";
		clocks = <&si5351 1>, <&si5351 2>;
		clock-names = "bclk", "lrclk";

		daifmt_master_override = "CBM_CFM";
	};

	clocks {
		/* 25MHz reference crystal */
		ref25: oscillator {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <25000000>;
		};
	};
};

&codec {
	status = "disabled";
};

&pio {
	spi0_cs_pins: spi0_cs_pins {
		pins = "PC3";
	};

	/* PA6 for MCLK out */
	i2s0_pins: i2s0 {
		pins = "PA18", "PA19", "PA20", "PA21";
	};
};

&i2c0 {
	status = "okay";

	si5351: clock-generator {
		compatible = "silabs,si5351a-msop";
		reg = <0x60>;
		#address-cells = <1>;
		#size-cells = <0>;
		#clock-cells = <1>;

		/* connect xtal input to 25MHz reference */
		clocks = <&ref25>;
		clock-names = "xtal";
		xtal_cl = <8>; // XTAL_CL = 8pF

		/* connect xtal input as source of pll0 and pll1 */
		silabs,pll-source = <0 0>, <1 0>;

		clkout0 {
			reg = <0>;
			silabs,drive-strength = <8>;
			silabs,multisynth-source = <0>;
			silabs,clock-source = <0>;
			silabs,pll-master;
			silabs,disable-state = <2>;
		};

		clkout1 {
			reg = <1>;
			silabs,drive-strength = <8>;
			silabs,multisynth-source = <0>;
			silabs,clock-source = <0>;
			silabs,disable-state = <2>;
		};

		clkout2 {
			reg = <2>;
			silabs,drive-strength = <8>;
			silabs,multisynth-source = <0>;
			silabs,clock-source = <0>;
			silabs,disable-state = <2>;
		};
	};
};

&i2c1 {
	/* no I2C1 for I2S0 */
	status = "disabled";
};

&i2c2 {
	status = "okay";
};

&spi0 {
	cs-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>;
	pitft: pitft@0{
		/* PG11 disable */
		status = "disabled";
	};

	pitft_ts: pitft-ts@1 {
		status = "disabled";
	};
};

&i2s0 {
	status = "okay";
	clk_always_on = <1>;
};


