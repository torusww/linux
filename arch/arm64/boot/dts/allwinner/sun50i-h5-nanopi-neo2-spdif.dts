/dts-v1/;
#include "sun50i-h5-nanopi-neo2.dts"

/ {
        aliases {
                spdif = &spdif;
        };

        sound_spdif {
                compatible = "simple-audio-card";
                simple-audio-card,name = "On-board SPDIF";

                simple-audio-card,cpu {
                        sound-dai = <&spdif>;
                };

                simple-audio-card,codec {
                        sound-dai = <&spdif_out>;
                };
        };

        spdif_out: spdif-out {
                #sound-dai-cells = <0>;
                compatible = "linux,spdif-dit";
        };
};

&codec {
	status = "disabled";
};

&pio {
	spi0_cs_pins: spi0_cs_pins {
        pins = "PC3", "PA6";
        function = "gpio_out";
    };
};

&i2c0 {
    status = "okay";
};

&i2c1 {
    /* no I2C1 for I2S0 */
    status = "disabled";
};

&i2c2 {
    status = "okay";
};

&spi0 {
    cs-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>, <&pio 0 6 GPIO_ACTIVE_HIGH>;

    pitft_ts: pitft-ts@1 {
        status = "disabled";
    };
};

&spdif {
        pinctrl-names = "default";
        pinctrl-0 = <&spdif_tx_pins_a>;
        status = "okay";

};

